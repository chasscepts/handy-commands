{
  "name": "handy-commands",
  "displayName": "Handy Commands",
  "description": "Organise frequently used commands on the sidebar for easy access.",
  "version": "0.0.1",
  "icon": "assets/icon.png",
  "publisher": "chasscepts",
  "author": {
    "name": "Obetta Francis",
    "email": "francischassobetta@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/chasscepts/handy-commands"
  },
  "bugs": {
    "url": "https://github.com/chasscepts/handy-commands/issues"
  },
  "homepage": "https://github.com/chasscepts/handy-commands#readme",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "handy-commands.execute-command",
        "title": "Execute"
      },
      {
        "command": "handy-commands.change-group",
        "title": "Change Group"
      },
      {
        "command": "handy-commands.add-new-group",
        "title": "New Group"
      },
      {
        "command": "handy-commands.add-new-command",
        "title": "New Command"
      },
      {
        "command": "handy-commands.delete-group",
        "title": "Delete Group"
      },
      {
        "command": "handy-commands.delete-command",
        "title": "Delete",
        "icon": {
          "light": "assets/light/delete.svg",
          "dark": "assets/dark/delete.svg"
        }
      },
      {
        "command": "handy-commands.paste-to-terminal",
        "title": "Paste to terminal",
        "icon": {
          "light": "assets/light/content-paste.svg",
          "dark": "assets/dark/content-paste.svg"
        }
      }
    ],
    "viewsWelcome": [
      {
        "view": "handy-commands.commandTree",
        "contents": "[Add A Group To Start](Command:handy-commands.add-new-group)",
        "when": "!hasGroups"
      },
      {
        "view": "handy-commands.commandTree",
        "contents": "[Add A Command To This Group](Command:handy-commands.add-new-command)",
        "when": "hasGroups"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "handy-commands.commandTree",
          "name": "Handy Commands"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "handy-commands.change-group",
          "when": "view == handy-commands.commandTree && hasGroups",
          "group": "@0"
        },
        {
          "command": "handy-commands.add-new-group",
          "when": "view == handy-commands.commandTree",
          "group": "@1"
        },
        {
          "command": "handy-commands.add-new-command",
          "when": "view == handy-commands.commandTree && hasGroups",
          "group": "@2"
        },
        {
          "command": "handy-commands.delete-group",
          "when": "view == handy-commands.commandTree && hasGroups",
          "group": "@3"
        }
      ],
      "view/item/context": [
        {
          "command": "handy-commands.delete-command",
          "when": "view == handy-commands.commandTree",
          "group": "inline@1"
        },
        {
          "command": "handy-commands.paste-to-terminal",
          "when": "view == handy-commands.commandTree",
          "group": "inline@0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-csstree-validator": "^1.9.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
